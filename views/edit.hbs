<div class="container">
  <div class="row">
    <h4 class="form-text text-muted col-sm-3">＊必填欄位</h4>
    <h4 class="form-text text-muted col-sm-6">請修改你的支出</h4>
    <form class="col-sm-12" action="/records/{{ record._id }}?_method=PUT" method="POST" style="display: inline;">
      <div class="form-group row">
        <label for="name" class="col-sm-3">名稱＊</label>
        <input type="text" class="form-control col-sm-6 ml-3" id="name" name="name" placeholder="name"
          value="{{record.name}}">
      </div>
      <div class="form-group row">
        <label for="date" class="col-sm-3">日期＊</label>
        <input type="text" class="form-control col-sm-6 ml-3" id="date" name="date" placeholder="date"
          value="{{record.date}}">
      </div>

      <div class="form-group dropdown row">
        <label for="category" class="col-sm-3">類別＊</label>
        <select class="form-control col-sm-6" id="category" name="category" placeholder="category">
          {{#each categories}}
          <option {{#if this.selected}}selected{{/if}}>{{this.category}}</option>
          {{/each}}
        </select>
      </div>

      <div class=" form-group row">
        <label for="amount" class="col-sm-3">金額＊</label>
        <input type="text" class="form-control col-sm-6 ml-3" id="amount" name="amount" placeholder="amount"
          value="{{record.amount}}">
      </div>
      <button type="submit" class="btn btn-primary">送出</button>
    </form>
  </div>
</div>