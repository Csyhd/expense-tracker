<div class="container" style="background-color: rgb(238, 238, 238);">
  <div class="row m-3">
    <div class="col-sm-12 mt-3">
      <div class=" row title ">
        <h4 class="form-text text-muted col-sm-3">＊必填欄位</h4>
        <h4 class="form-text text-muted col-sm-6">請修改你的支出$</h4>
      </div>
    </div>

    <form class="col-sm-12 mt-5" action="/records/{{ record._id }}?_method=PUT" method="POST" style="display: inline;">
      <div class="form-group row">
        <label for="name" class="col-sm-3">名稱＊</label>
        <input type="text" class="form-control col-sm-6 ml-3" id="name" name="name" placeholder="name"
          value="{{record.name}}">
      </div>

      <div class="form-group row form-list">
        <label for="date" class="col-sm-3">日期＊</label>
        <div class="input-group date col-sm-6" id="datepicker">
          <input type='text' class="form-control col-sm-12" id="date" name="date" value="{{record.date}}" />
          <span class="input-group-addon ml-5">
            <span>
              <i class="fa fa-calendar" style="color:rgb(24, 122, 233);font-size:30px;"></i>
            </span>
          </span>
        </div>
      </div>

      <div class="form-group dropdown row">
        <label for="category" class="col-sm-3">類別＊</label>
        <select class="form-control col-sm-6 ml-3" id="category" name="category" placeholder="category">
          {{#each categories}}
          <option {{#if this.selected}}selected{{/if}}>{{this.category}}</option>
          {{/each}}
        </select>
      </div>

      <div class=" form-group row">
        <label for="amount" class="col-sm-3">金額＊</label>
        <input type="text" class="form-control col-sm-6 ml-3" id="amount" name="amount" placeholder="amount"
          value="{{record.amount}}">
      </div>
      <div class="form-group row form-list  mb-3 justify-content-center">
        <button type="submit" class="btn btn-primary">送出</button>
      </div>
    </form>
  </div>
</div>

<script type=" text/javascript">
$(function () {
$('#datepicker').datepicker({
format: 'yyyy/mm/dd',
})
})
</script>