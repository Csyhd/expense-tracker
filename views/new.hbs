<div class="container">
  <div class="row">
    <h4 id="emailHelp" class="form-text text-muted col-sm-3">＊必填欄位</h4>
    <h4 id="emailHelp" class="form-text text-muted col-sm-6">請輸入你的支出</h4>
    <form class="col-sm-12">
      <div class="form-group row">
        <label for="name" class="col-sm-3">名稱＊</label>
        <input type="email" class="form-control col-sm-6 ml-3" id="name" name="name" aria-describedby="emailHelp"
          placeholder="Enter email">
      </div>
      <div class="form-group row">
        <label for="date" class="col-sm-3">日期＊</label>
        <input type="email" class="form-control col-sm-6 ml-3" id="date" name="date" aria-describedby="emailHelp"
          placeholder="Enter email">
      </div>
      <div class="form-group row">
        <label for="category" class="col-sm-3">類別＊</label>
        <input type="email" class="form-control col-sm-6 ml-3" id="category" name="category"
          aria-describedby="emailHelp" placeholder="Enter email">
      </div>
      <div class="form-group row">
        <label for="amount" class="col-sm-3">金額＊</label>
        <input type="email" class="form-control col-sm-6 ml-3" id="amount" name="amount" aria-describedby="emailHelp"
          placeholder="Enter email">
      </div>
      <button type="submit" class="btn btn-primary">新增支出</button>
    </form>
  </div>
</div>