<div class="container mt-5">
  <div class=" row m-3">

    <div class="col-sm-12 mt-3">
      <div class=" row title ">
        <h4 id="title-warning" class="form-text text-muted col-sm-3 mt-2">＊必填欄位</h4>
        <h4 id="title-amount" class=" form-text text-muted col-sm-3 mt-2">請輸入你的支出$</h4>
      </div>
    </div>

    <form class="col-sm-12 mt-5" action="/records" method="POST" style="display: inline;">

      <div class=" form-group row form-list">
        <label for="name" class="col-sm-3">名稱＊</label>
        <input type="text" class="form-control col-sm-6 ml-3" id="name" name="name" placeholder="name">
      </div>

      <div class="form-group row form-list">
        <label for="date" class="col-sm-3">日期＊</label>
        <div class="input-group date col-sm-6" id="datepicker">
          <input type='text' class="form-control col-sm-12" id="date" name="date" />
          <span class="input-group-addon ml-5">
            <span>
              <i class="fa fa-calendar" style="color:rgb(24, 122, 233);font-size:30px;"></i>
            </span>
          </span>
        </div>
      </div>

      <div class="form-group dropdown row form-list">
        <label for="category" class="col-sm-3">類別＊</label>
        <select class="form-control col-sm-6 ml-3" id="category" name="category">
          {{#each categories}}
          <option>{{this.category}}</option>
          {{/each}}
        </select>
      </div>

      <div class="form-group row form-list">
        <label for="amount" class="col-sm-3">金額＊</label>
        <input type="text" class="form-control col-sm-6 ml-3" id="amount" name="amount" placeholder="amount">
      </div>
      <div class="form-group row form-list  mb-3 justify-content-center">
        <button type="submit" class="btn btn-primary">新增支出</button>
      </div>
    </form>
  </div>
</div>

<script type=" text/javascript">
$(function () {
  $('#datepicker').datepicker({
    format: 'yyyy/mm/dd',
    })
})
</script>