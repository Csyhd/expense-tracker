<div class="container">

  <form class="col-sm-12" action="/records/filter" method="GET" style="display: inline;">
    <div class="form-group dropdown row">
      <label for="category" class="col-sm-3">類別＊</label>
      <select class="form-control col-sm-6" id="category" name="category" placeholder="category">
        {{#each categories}}
        <option value="{{this._id}}">{{this.category}}</option>
        {{/each}}
      </select>
      <button class="btn btn-danger" type="submit">篩選</button>

    </div>
  </form>

  <div class="row">
    <div class="col-sm-12 mb-3">
      <div class="row">
        <div class="col-sm-6 mb-3">
          <h2>總金額：</h2>
        </div>
        <div class="col-sm-6 mb-3">
          <div class="jumbotron jumbotron-fluid">
            <div class="container">
              <p class="lead">{{totalAmount}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 mb-3">
      <ul class="list-group">
        {{#each records}}
        <li class="list-group-item">
          <div class="row">
            <div class="col-auto mr-auto category">
              {{{this.icon}}}
            </div>
            <div class="col-auto mr-auto">
              <div class="row">
                <div class="col-sm-12 mr-auto name">
                  <h4 style="display: inline; vertical-align: middle;">
                    {{this.name}}
                  </h4>
                </div>
                <div class="col-sm-12 mr-auto date">
                  <h4 style="display: inline; vertical-align: middle;">
                    {{this.date}}
                  </h4>
                </div>
              </div>

            </div>
            <div class="col-auto mr-auto amount">
              <h4 style="display: inline; vertical-align: middle;">
                {{this.amount}}
              </h4>
            </div>


            <div class="col-auto mr-auto">
              <a class="btn btn-secondary" href="/records/{{ this._id }}/edit">修改</a>
              <form action="/records/{{ this._id }}?_method=DELETE" method="POST" style="display: inline;">
                <button class="btn btn-danger" type="submit">刪除</button>
              </form>
              </h4>
            </div>
          </div>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 mb-3">
      <a class="btn btn-success" href="/records/new">新增</a>
    </div>
  </div>
</div>